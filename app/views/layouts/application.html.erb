<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/ad383b9fb6.js" crossorigin="anonymous"></script>
  </head>

<body>
  <header class="bg-dark text-white">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand p-1" href="/">Bookers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
        <li>
          <i class="fas fa-home"><%= link_to 'Home', user_path(current_user.id) %></i>
        </li>
        <li>
          <i class="fas fa-users"><%= link_to 'Users', users_path %></i>
        </li>
        <li>
          <i class="fas fa-book-open"><%= link_to 'Books', books_path %></i>
        </li>
        <li>
          <i class="fas fa-sign-in-alt"><%= link_to "logout", destroy_user_session_path, method: :delete %></i>
        </li>

        <% else %>
        <li>
          <i class="fas fa-home"><%= link_to "Home", root_path %></i>
        </li>
        <li>
          <i class="fas fa-link"><%= link_to "About", home_about_path %></i>
        </li>

        <li>
          <i class="fas fa-user-plus"><%= link_to "sign up", new_user_registration_path %></i>
        </li>
        <li>
          <i class="fas fa-sign-in-alt"><%= link_to "login", new_user_session_path %></i>
        </li>
        <% end %>
      </ul>
      </div>
      </div>
    </nav>
  </header>
    <main class="mb-auto">
    <%= yield %>
  <footer class="pt-4">
    <div class="text-center">CopyRight Infratop.inc</div>
  </footer>
</body>
</html>