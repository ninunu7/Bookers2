    <% flash.each do |message_type, message| %>
      <%= message %>
    <% end %>
    <div class="">
      <h1>User info</h1>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
      <p class="border-top mt-2 p-2">name：<%= user.name %></p>
      <p class="border-top mt-2 p-2">introduction：<%= user.introduction %></p>
      <div><%= link_to '' , edit_user_path(@user.id), class: "fas fa-user-cog btn btn-outline-secondary mx-auto d-block btn-sm" %></div>

      <h1 class="pt-3">New book</h1>
      <!-- form_with部分 -->
      <%= form_with model:book, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <div class="p-2"><%= f.submit 'Create Book', class: "btn btn-success mx-auto d-block" %></div>
      <% end %>
    </div>

