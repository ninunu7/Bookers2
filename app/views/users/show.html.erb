<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user,book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>  <!-- この行を追加 -->
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"),user_path(book.user) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
