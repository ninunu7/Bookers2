<div class="container">  <!-- この行を追加 -->
  <div class="row">
    <div class="col-lg-5 offset-lg-3">
      <h1>User info</h1>
        <div class="d-flex flex-column">
          <%= form_with model:@user, local:true do |f| %>
            <label for="inputName">Name</label>
            <div class="d-flex flex-column">
              <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
            </div>

            <label for="inputImage">Image</label>
            <div class="d-flex flex-column">
              <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
            </div>
            <label for="inputName">Introoduction</label>
            <div class="d-flex flex-column">
              <%= f.text_area :name, autofocus: true, id:"inputName", placeholder:"名前"%>
            </div>
            <div class="mt-3"><%= f.submit 'Update User', class: "btn btn-secondary" %></div>
          <% end %>
        </div>
    </div>
  </div>  <!-- この行を追加 -->
</div>