<div class="container">  <!-- この行を追加 -->
  <div class="row">
    <div class="col-lg-7 offset-lg-3">
<% if @book.errors.any? %>
        <div class="text-danger"><%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        </div>
      <% end %>
      <h1 class="mt-3">Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
          <p class="mb-1">Title</p>
          <%= f.text_field :title, size: "60" %>
          <p class="mb-1 mt-3">Opinion</p>
          <%= f.text_area :body, size: "60x3" %>
          <div class="mt-2"><%= f.submit 'Update Book', class: "btn btn-success d-block" %></div>
      <% end %>
      <div class="mt-2">
        <%= link_to 'show', book_path(@book.id) %>
        <a>|</a>
        <%= link_to 'back', books_path %>
      </div>
    </div>
 </div>  <!-- この行を追加 -->
</div>