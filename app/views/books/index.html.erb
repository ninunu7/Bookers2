<% if @book.errors.any? %>
        <div class="text-danger"><%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        </div>
      <% end %>

<div class="container">  <!-- この行を追加 -->
 <div class="container">
  <div class="row">
    <div class="col-lg-3">
       <%= render 'users/user', user: @user,book: @book %>
    </div>
    <div class="col-lg-8 offset-lg-1">  <!-- この行を追加 -->
        <h1>Book detail</h1>
        <table class="table table-striped">
        <thead>
        <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
        <tr>

            <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
        </tr>
        <% end %>
         </tbody>
      </table>
    </div>
  </div> <!-- この行を追加 -->
</div>






